{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "pretty": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "e2e"
    ]
}
